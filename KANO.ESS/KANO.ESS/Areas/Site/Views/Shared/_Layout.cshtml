    <style>
        .k-action-buttons {
            height: 55px;
        }

            .k-action-buttons > .k-button {
                padding: 0;
                height: 40px;
                margin: 0 !important;
            }

        pre {
            padding: 5px;
            margin: 5px;
        }

        .string {
            color: green;
        }

        .number {
            color: darkorange;
        }

        .boolean {
            color: blue;
        }

        .null {
            color: magenta;
        }

        .key {
            color: red;
        }

        .break-word {
            word-break: break-word;
        }

        .more {
            color: #333;
