<div id="modalFormTimeAttendance" class="modal" role="dialog" data-bind="with:model">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Recommendation Absence</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" data-bind="with : data.TimeAttendance, afterRender: on.renderDocumentForm">
                <form>
                    <div class="form-group">
                        <label for="input">Employee</label>
                        <div class="form-control-plaintext" data-bind="html:`${EmployeeName}  (${EmployeeID})`"></div>
                    </div>
                    <div class="form-group">
                        <label for="dropdownType">Absence Code</label>
                        <div class="form-control-plaintext" data-bind="html:AbsenceCodeDescription"></div>

                    </div>
                    <div class="form-group">
                        <label for="Date">Date</label><br>
                        <div class="form-control-plaintext" data-bind="html:standarizeDateFull(FormattedClockLoggedDate)"></div>

                    </div>
                    <div class="form-group">
                        <label for="Clockin">Clock In - Clock Out</label>
                        <div class="form-control-plaintext">
                            <span data-bind="html:FormattedClockIn"></span>
                            -
                            <span data-bind="html:FormattedClockOut"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Reason">Reason</label>
                        <pre data-bind="html:Reason"></pre>
                    </div>
                    <div class="form-group">
                        <label for="input">Status</label>
                        <div class="form-control-plaintext" data-bind="html:`${StatusDescription}`"></div>
                    </div>
                    <!-- ko if:Accessible -->
                    <div class="form-group" data-bind="">
                        <label for="input">Document Verification</label>
                        <a href="" class="btn btn-sm btn-block btn-info" target="_blank" data-bind="attr:{title:Filename, href:`/ESS/TimeManagement/Download/${EmployeeID}/${AXRequestID}/${Filename}`}"><span class="mdi mdi-download"></span> Download Document</a>
                    </div>
                    <!-- /ko -->

                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>