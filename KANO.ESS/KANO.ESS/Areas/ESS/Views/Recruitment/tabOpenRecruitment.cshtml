<div class="row">
    <div class="col-lg-12">
        <div class="card card-tab-content">
            <div class="card-body">
                <h4 class="card-title">
                    <i class="mdi mdi-file-document-box"></i> Open Recruitment
                    @*<button type="button" class="btn btn-sm btn-info float-right" data-bind="click:action.openFormDocument, visible: !model.app.config.readonly">Add</button>*@
                </h4>
                <form class="row">
                    <div class="col-lg-12">
                        <div id="gridOpenRecruitment"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="modalApplication" class="modal" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Application</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group row">
                        <label for="job" class="col-sm-3 col-form-label">Job</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="job" readonly data-bind="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="position" class="col-sm-3 col-form-label">Position</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="position" readonly data-bind="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="recruitmentType" class="col-sm-3 col-form-label">Recruitment Type</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="recruitmentType" readonly data-bind="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="notes" class="col-sm-3 col-form-label">Notes</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="notes" readonly data-bind="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="downloadFile" class="col-sm-3 col-form-label">Download File</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="downloadFile" readonly data-bind="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Document</label>
                        <div class="col-sm-9">
                            <input type="file" name="Filepath" id="Filepath" data-bind="kendoUpload: {
                                   multiple: false,
                                   template: kendo.template($('#fileTemplate').html()),
                                   select: model.on.documentSelect,
                                   }" />
                            <div data-bind="value: Filepath"></div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="task-details">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-info" data-bind="click:model.action.saveRequestRecruitment">Apply</button>
                </div>
            </div>
        </div>
    </div>
</div>