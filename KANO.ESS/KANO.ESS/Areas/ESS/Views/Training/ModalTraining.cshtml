
<div id="modalTraining" class="modal" role="dialog" data-bind="with: model">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="mdi mdi-google-circles-group"></i>
                    Sign Up Training
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" data-bind="with:data.Training, afterRender:model.on.renderFormTraining">
                <form>
                    <div class="form-group">
                        <label for="Origin">Name</label><br>
                        <div class="form-control-plaintext" data-bind="html:Name"></div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col">
                                <label for="Date">Schedule Start</label><br>
                                <div class="form-control-plaintext" data-bind="html:standarizeDateTime(Schedule.Start())"></div>
                            </div>
                            <div class="col">
                                <label for="Date">Schedule End</label><br>
                                <div class="form-control-plaintext" data-bind="html:standarizeDateTime(Schedule.Finish())"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Origin">Registration Deadline</label><br>
                        <div class="form-control-plaintext" data-bind="html:standarizeDateTime(RegistrationDeadline())"></div>
                    </div>
                    <div class="form-group">
                        <label for="Origin">Location</label><br>
                        <div class="form-control-plaintext" data-bind="html:Location"></div>
                    </div>                                        

                    <div class="form-group">
                        <label for="TermCondition">Terms & Condition</label><br>
                        <textarea id="TermCondition" type="text" cols="5" rows="5" class="form-control form-control-sm w-md-xs-100 mb-md-xs-2 w-100" data-bind="value:TermAndCondition" readonly></textarea>
                    </div>

                    <div class="form-group">
                        <label for="Date">Reference</label><br>
                        <div id="gridReference"></div>
                    </div>                    
                </form>
            </div>
            <div class="modal-footer">
                <div class="task-details">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-info" data-bind="click:model.action.join">Join</button>
                </div>
            </div>
        </div>
    </div>
</div>
