
<div id="ModalRevisionTravel" class="modal" role="dialog" data-bind="with: model">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="mdi mdi-wallet-travel"></i>
                    Travel Revision
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" data-bind="with : data.Travel">
                <form>
                    <div class="form-group">
                        <label for="StatusNote">Revision Note</label><br>
                        <textarea readonly data-bind="value : NoteRevision" type="text" cols="5" rows="2" class="form-control form-control-sm w-md-xs-100 mb-md-xs-2 w-100 textarea-info" ></textarea>

                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col">
                                <label for="Date" class="required">Start Time</label><br>
                                <input class="form-control w-md-xs-100 mb-md-xs-2 w-100" data-bind="kendoDateTimePicker: { value: Schedule.Start, format: 'dd MMM yyyy HH:mm' }" />
                            </div>
                            <div class="col">
                                <label for="Date" class="required">End Time</label><br>
                                <input class="form-control w-md-xs-100 mb-md-xs-2 w-100" data-bind="kendoDateTimePicker: { value: Schedule.Finish, format: 'dd MMM yyyy HH:mm' }" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Origin" class="required">Origin</label><br>
                        <input class="form-control w-md-xs-100 mb-md-xs-2 w-100" data-bind="value: Origin" />
                    </div>
                    <div class="form-group">
                        <label for="Destination" class="required">Destination</label><br>
                        <input class="form-control w-md-xs-100 mb-md-xs-2 w-100" data-bind="value: Destination" />
                    </div>
                    <div class="form-group">
                        <label for="Date" class="required">Transportation</label><br>
                        <select class="form-control w-md-xs-100 mb-md-xs-2 w-100" data-bind="kendoDropDownList: {
                                                dataTextField: 'Description',
                                                dataValueField: 'AXID',
                                                data: $parent.list.transportation,
                                                value: Transportation.AXID,
                                                filter: 'contains',
                                                optionLabel: 'Select Intention',
                                                enabled: true
                                                }, value: Transportation.AXID"></select>
                    </div>
                    <div class="form-group">
                        <label for="Date" class="required">Purpose</label><br>
                        <select class="form-control w-md-xs-100 mb-md-xs-2 w-100" data-bind="kendoDropDownList: {
                                                dataTextField: 'Description',
                                                dataValueField: 'AXID',
                                                data: $parent.list.purpose,
                                                value: TravelPurpose.AXID,
                                                change:$parent.on.purposeChange,
                                                filter: 'contains',
                                                optionLabel: 'Select Intention',
                                                enabled: true
                                                }, value: TravelPurpose.AXID"></select>
                    </div>
                    <div class="form-group mb-0">
                        <label>Document Request</label>
                    </div>

                    <!-- /ko -->
                    <div class="form-group">
                        <label for="Destination" class="required">Note</label><br>
                        <textarea data-bind="value : Note" type="text" cols="5" rows="2" class="form-control form-control-sm w-md-xs-100 mb-md-xs-2 w-100" data-bind="value:Note" placeholder="e.g. Saya ingin berangkat naik Kereta Api, pulang naik Pesawat"></textarea>
                    </div>

                    <div class="task-details">
                        <label>Document</label>
                        <input type="file" name="FilepathRevision" id="FilepathRevision" data-bind="kendoUpload: {
                               multiple: false,
                               template: kendo.template($('#fileTemplate').html())
                         }" />
                        <div data-bind="value: Filepath"></div>
                    </div>

                    
                </form>
            </div>
            <div class="modal-footer">
                <div class="task-details">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-info" data-bind="click:model.action.requestRevition">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
