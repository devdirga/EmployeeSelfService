                        <label for="Date" class="required">Travel Type</label><br>
                        <select class="form-control w-md-xs-100 mb-md-xs-2 w-100" data-bind="kendoDropDownList: {
                                                dataTextField: 'text',
                                                dataValueField: 'value',
