                    <!-- /ko -->
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col">
                                <label for="Date" class="required">Start Time</label><br>
                                <input class="form-control w-md-xs-100 mb-md-xs-2 w-100" data-bind="kendoDateTimePicker: { value: Schedule.Start, format: 'dd MMM yyyy HH:mm' }" />
                            </div>
                            <div class="col">
                                <label for="Date" class="required">End Time</label><br>
                                <input class="form-control w-md-xs-100 mb-md-xs-2 w-100" data-bind="kendoDateTimePicker: { value: Schedule.Finish, format: 'dd MMM yyyy HH:mm' }" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Origin" class="required">Origin</label><br>
                        <input id="Origin" class="form-control w-md-xs-100 mb-md-xs-2 w-100" data-bind="value: Origin" />
                    </div>
                    <div class="form-group">
                        <label for="Destination" class="required">Destination</label><br>
                        <input id="Destination" class="form-control w-md-xs-100 mb-md-xs-2 w-100" data-bind="value: Destination" />
                    </div>

