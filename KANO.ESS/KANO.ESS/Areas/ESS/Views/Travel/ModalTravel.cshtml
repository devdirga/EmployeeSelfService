                    <div class="form-group">
                        <label for="Date" class="required">Transportation</label><br>
                        <select class="form-control w-md-xs-100 mb-md-xs-2 w-100" data-bind="kendoDropDownList: {
                                                dataTextField: 'Description',
                                                dataValueField: 'AXID',
                                                data: $parent.list.transportation,
                                                value: Transportation,
                                                filter: 'contains',
                                                optionLabel: 'Select Transportation',
                                                enabled: true
                                                }"></select>
                    </div>

                    <div class="form-group">
                        <label for="Date" class="required">Purpose</label><br>
                        <select class="form-control w-md-xs-100 mb-md-xs-2 w-100" data-bind="kendoDropDownList: {
                                                dataTextField: 'Description',
                                                dataValueField: 'AXID',
                                                data: $parent.list.purpose,
                                                value: TravelPurpose,
                                                change:$parent.on.purposeChange,
                                                filter: 'contains',
                                                optionLabel: 'Select Purpose',
                                                enabled: true
                                                }"></select>
                    </div>
                    <!-- ko if:$parent.is.overseas() && false -->
                    <div class="form-group mb-0">
                        <label>Document Request</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" id="passport" type="checkbox" data-bind="checked: NeedPassportExtension">
                        <label class="form-check-label" for="passport">Require passport extension</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" id="visa" type="checkbox" data-bind="checked: NeedVisaExtension">
                        <label class="form-check-label" for="visa">Require Visa</label>
                    </div>
                    <!-- /ko -->
                    <div class="form-group">
                        <label for="Destination">Note</label><br>
                        <textarea id="Description" type="text" cols="5" rows="3" class="form-control form-control-sm w-md-xs-100 mb-md-xs-2 w-100" data-bind="value:Note" placeholder="e.g. Saya ingin berangkat naik Kereta Api, pulang naik Pesawat
        Saya ingin berangkat pagi pukul 07.00 WIB"></textarea>
                    </div>
                    <div class="task-details">
                        <label class="required">Document</label>
                        <input type="file" name="Filepath" id="Filepath" data-bind="kendoUpload: {
                               multiple: false,
                               select: model.on.travelDocumentSelect,
                               remove: model.on.travelDocumentRemove,
                               template: kendo.template($('#fileTemplate').html()),
                               validation: {
                                    allowedExtensions: model.app.config.upload.allowedExtensions,
                                    maxFileSize: model.app.config.upload.maxFileSize
                                }
                         }" />
                        @*<div data-bind="value: Filepath"></div>*@
                        <!-- ko if:!!HTMLFile() -->
                        <div data-bind="html:HTMLFile"></div>
                        <!-- /ko -->
                    </div>
