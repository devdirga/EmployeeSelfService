<div id="ModalCanteenProfile" class="modal" role="dialog">
    <div class="modal-dialog" role="document" data-bind="with: model">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="mdi mdi-store"></i>
                    Canteen Profile
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form data-bind="with: data.canteen">
                    <div class="form-group">
                        <label>Availability</label>
                        <label class="switch">
                            <input type="checkbox" data-bind="checked: Availability">
                            <span class="slider round"></span>
                        </label>
                    </div>
                    <div class="form-group">
                        <label>Menu</label>
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center text-middle" style="width:5%">#</th>
                                    <th class="text-center text-middle" colspan="2" style="width:35%">Menu</th>
                                    <th class="text-center text-middle" style="width:10%">
                                        <button type="button" class="btn btn-sm btn-success" data-bind="click: $parent.action.addMenu">
                                            <i class="mdi mdi-plus-box m-0"></i>
                                        </button>
                                    </th>
                                </tr>
                            </thead>
                            <tbody data-bind="ifnot: $parent.data.menus().length">
                                <tr>
                                    <td colspan="4" class="text-center p-4">No menu</td>
                                </tr>
                            </tbody>
                            <tbody data-bind="foreach: $parent.data.menus()">
                                <tr data-bind="css:{'odd-row':$index()%2 == 1}">
                                    <td class="text-center" style="width:5%">
                                        <strong data-bind="text:$index() + 1"></strong>
                                    </td>
                                    <td class="text-center" colspan="2" style="width:35%">
                                        <input type="text" class="form-control form-control-sm" placeholder="Menu" data-bind="value:Name" />
                                    </td>
                                    <td class="text-center" style="width:10%">
                                        <button class="btn btn-xs btn-outline-danger" data-bind="click: model.action.deleteMenu"><i class="fa mdi mdi-delete"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="form-group">
                        <label>Image</label>
                        <input type="file" name="Filepath" id="Filepath" data-bind="kendoUpload: {
                                            multiple: false,
                                            template: kendo.template($('#fileTemplate').html()),
                                            validation: {
                                                allowedExtensions: model.app.config.upload.allowedExtensions,
                                                maxFileSize: model.app.config.upload.maxFileSize
                                            }
                                        }" />
                        <!-- ko if:!!HTMLFile() -->
                        <div data-bind="html:HTMLFile"></div>
                        <!-- /ko -->
                    </div>
                </form>
            </div>
            <div class="modal-footer" data-bind="visible: !model.is.readonly()">
                <div class="task-details">
                    <button type="button" class="btn ml-xs-0 btn-light" data-bind="" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn ml-xs-0 btn-info" data-bind="click:model.action.saveCanteenProfile">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>