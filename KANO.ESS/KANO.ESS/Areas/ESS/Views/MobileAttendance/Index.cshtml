@{
    //ViewData["Title"] = "Index";
    Layout = "_Layout";
}

@using KANO.Core.Service
@using KANO.ESS
@using KANO.Core.Model
@using Newtonsoft.Json

<script async>
    var viewBag = @Json.Serialize(ViewBag);
</script>

<script src="~/assets/vendors/mapbox/mapbox-gl.js"></script>
<link rel="stylesheet" href="~/assets/vendors/mapbox/mapbox-gl.css">
<script src="~/assets/areas/ess/js/mobile-dashboard.js?@(Startup.Tick??DateTime.Now.Ticks)"></script>

<div class="row" data-bind="with:model">
    <main class="col-lg-12" role="main">
        <div class="row my-2">
            <div class="col-md-6 stretch-card card-summary mb-3">
                <div class="float-right filter-attendance">
                    <input class="w-md-xs-100 mb-md-xs-2" data-bind="kendoDatePicker: { value: model.data.StartDate, max : model.data.todaymin1, format: 'dd MMM yyyy' } " />
                    <input class="w-md-xs-100 mb-md-xs-2" data-bind="kendoDatePicker: { value: model.data.EndDate, max : model.data.todaymin1, format: 'dd MMM yyyy' } " />
                    <a href="#" class="w-md-xs-100 btn btn-primary" onclick="model.action.filter(); return false;">Filter</a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 stretch-card card-summary mb-3">
                <div class="card bg-gradient-info card-img-holder text-white">
                    <img src="~/assets/vendors/purple-admin/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image">
                    <div class="card-body p-max-1200-4 p-xl-4">
                        <h4 class="font-weight-normal mb-3">
                            Absence <i class="mdi mdi-bag-personal mdi-24px float-right"></i>
                        </h4>
                        @*<h1 class="mb-4">Today </h1>*@
                        @*<h6 class="card-text">All day <strong>0</strong></h6>*@
                        <h6 class="card-text">Today <strong data-bind="text: model.data.toDay" class="ml-2"></strong></h6>
                    </div>
                </div>
            </div>
            <div class="col-md-3 stretch-card card-summary mb-3">
                <div class="card bg-gradient-danger card-img-holder text-white">
                    <img src="~/assets/vendors/purple-admin/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image">
                    <div class="card-body p-max-1200-4 p-xl-4">
                        @*<h4 class="font-weight-normal mb-3">
                            Transaction <i class="mdi mdi-bag-personal mdi-24px float-right"></i>
                        </h4>
                        <h6 class="card-text">All day <strong>0</strong></h6>
                        <h6 class="card-text">Today <strong>0</strong></h6>*@
                    </div>
                </div>
            </div>
            <div class="col-md-3 stretch-card card-summary mb-3">
                <div class="card bg-gradient-primary card-img-holder text-white">
                    <img src="~/assets/vendors/purple-admin/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image">
                    <div class="card-body p-max-1200-4 p-xl-4">
                        @*<h4 class="font-weight-normal mb-3">
                            Hour / Day / Person <i class="mdi mdi-bag-personal mdi-24px float-right"></i>
                        </h4>*@
                        @*<h1 class="mb-4">Today </h1>*@
                        @*<h6 class="card-text">All day <strong>0</strong></h6>*@
                        @*<h6 class="card-text">Today <strong>0</strong></h6>*@
                    </div>
                </div>
            </div>
            <div class="col-md-3 stretch-card card-summary mb-3">
                <div class="card bg-gradient-success card-img-holder text-white">
                    <img src="~/assets/vendors/purple-admin/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image">
                    <div class="card-body p-max-1200-4 p-xl-4">
                        @*<h4 class="font-weight-normal mb-3">
                            First Check In <i class="mdi mdi-bag-personal mdi-24px float-right"></i>
                        </h4>*@
                        @*<h1 class="mb-4">Today </h1>*@
                        @*<h6 class="ard-text">Member <cstrong>0</strong></h6>*@
                        @*<h6 class="card-text">Guest <strong>0</strong></h6>*@
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 stretch-card card-summary mb-3">
                <div id='map' style='width: 100%; height: 450px;'></div>
            </div>
            <div class="col-md-6 stretch-card card-summary mb-3">
                <div class="card">
                    <div class="card-body">
                        <div id="gridCheckIn"></div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<script>
    $(function () {
        model.init.dashboard()
    })
</script>
